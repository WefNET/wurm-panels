{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wurm-panels",
  "version": "0.1.0",
  "identifier": "rodeo.wurm.wurm-panels",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "tray-icon": {
      "iconPath": "icons/wurm-panels.ico",
      "iconAsTemplate": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "icons/tray.png",
      "icons/wurm-panels.ico"
    ],
    "icon": [
      "icons/wurm-panels.ico"
    ]
  }
}
