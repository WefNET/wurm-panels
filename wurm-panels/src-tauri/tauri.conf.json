{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Wurm Panels",
  "version": "0.1.3",
  "identifier": "rodeo.wurm.wurm-panels",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "splashscreen",
        "url": "splashscreen.html",
        "width": 400,
        "height": 300,
        "decorations": false,
        "alwaysOnTop": true,
        "center": true,
        "skipTaskbar": true,
        "closable": false,
        "resizable": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "tray-icon": {
      "iconPath": "icons/wurm-panels.ico",
      "iconAsTemplate": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Jackjones",
    "homepage": "https://wurm.rodeo",
    "license": "MIT",
    "resources": [
      "icons/tray.png",
      "icons/wurm-panels.ico",
      "../granger.html",
      "../index.html",
      "../map.html",
      "../settings.html",
      "../skills.html",      "../farming-grind-calc.html",      "../trade.html",
      "../watcher.html",
      "../splashscreen.html"
    ],
    "icon": [
      "icons/wurm-panels.ico"
    ]
  }
}